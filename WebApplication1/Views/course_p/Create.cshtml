            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2"><b>Admission Fee</b></div>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Admfee, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Admfee, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2"><b>Anual Fee</b></div>    <div class="col-md-10">
                @Html.EditorFor(model => model.Anualfee, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Anualfee, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

